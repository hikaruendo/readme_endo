\begin{table}[h]
  \begin{center}
   \caption{真値との誤差}\label{真値との誤差}
   \begin{tabular}{|c|c|c|}
    \hline
    & 平均誤差[m] & 最大誤差[m] \\ \hline
    (a)MAPONLY & 0.527 & 1.51 \\ \hline
    (b)ORSONLY & 5.28 & 14.2 \\ \hline
    (c)MAPORS &  0.561 & 1.68 \\ \hline
    \end{tabular}
   \end{center}
\end{table}
